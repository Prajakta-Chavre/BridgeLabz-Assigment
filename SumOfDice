/* Write a program SumOfTwoDice that prints the sum of two random integers between 1 and 6 (such as you might get when rolling dice). 
*/
package com.Assignment1;

import java.util.Random;

public class DiceSum {

	public static void main(String[] args) {
		Random ran = new Random();
		
		int die1 = ran.nextInt(6)+1;
		int die2 = ran.nextInt(6)+1;
		
		int sum = die1 + die2;
		
		System.out.println("Roll of Die1: "+die1);
		System.out.println("Roll of Die2: "+die2);
		System.out.println("Sum of Two Dice: "+sum);

	}

}
